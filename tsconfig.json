{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  "extends": "./ts.paths.json",
  "include": [
    "src",
    "./typings-custom/**/*.ts",
    "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}